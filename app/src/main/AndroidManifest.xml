<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.brandon.habitlogger">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="www.example.com"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ModifyHabitActivity.ModifyHabitActivity"
            android:label="New Habit"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".HabitSessions.SessionActivity"
            android:label="Habit Session"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme" />

        <receiver
            android:name=".HabitSessions.SessionManager$SessionToggle"
            android:exported="false">
            <intent-filter>
                <action android:name="session_toggle_pressed" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".HabitSessions.ActiveSessionsActivity"
            android:label="Active Habits"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".AboutActivity"
            android:label="About"
            android:theme="@style/AppTheme" />

        <activity android:name=".Preferences.SettingsActivity" />

    </application>

</manifest>