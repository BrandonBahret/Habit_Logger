<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.brandon.habitlogger">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--Broadcast receiver to detect when session notifications are paused/resumed by the user-->
        <receiver
            android:name=".HabitSessions.SessionNotificationManager$SessionToggle"
            android:exported="false">

            <intent-filter>
                <action android:name="session_toggle_pressed"/>
            </intent-filter>

        </receiver>

        <!--Export Data Local activity (for providing the option to save locally in chooser)-->
        <activity
            android:name=".DataExportHelpers.LocalExportActivity"
            android:exported="false"
            android:theme="@android:style/Theme.Translucent.NoTitleBar">

            <intent-filter
                android:icon="@drawable/ic_save_black_24dp"
                android:label="Save Locally">
                <action android:name="android.intent.action.SEND"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="text/csv"/>
            </intent-filter>

        </activity>

        <!--Main Activity-->
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>

        <!--Session Activity-->
        <activity
            android:name=".HabitSessions.SessionActivity"
            android:label="@string/habit_session_activity_label"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme"/>

        <!--Active Session Activity-->
        <activity
            android:name=".HabitSessions.ActiveSessionsActivity"
            android:label="@string/active_habits_activity_label"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/AppTheme"/>

        <!--About Activity-->
        <activity
            android:name=".ui.AboutActivity"
            android:label="@string/about_activity_label"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/AppTheme">

            <intent-filter>
                <action android:name=".ui.AboutActivity"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>

        </activity>

        <!--Settings Activity-->
        <activity
            android:name=".Preferences.SettingsActivity"
            android:parentActivityName=".ui.MainActivity">

            <intent-filter>
                <action android:name=".Preferences.SettingsActivity"/>
                <data android:mimeType="text/*"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>

        </activity>

        <!--Habit Activity-->
        <activity
            android:name=".HabitActivity.HabitActivity"
            android:label="@string/title_activity_habit"
            android:launchMode="singleTop"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MainActivity"/>

        </activity>

        <!--Data Overview Activity-->
        <activity
            android:name=".OverviewActivity.DataOverviewActivity"
            android:label="@string/title_activity_overall_statistics"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.brandon.habitlogger.ui.MainActivity"/>

        </activity>

    </application>

</manifest>