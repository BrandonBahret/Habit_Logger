<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.brandon.habitlogger">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                    android:host="www.example.com"
                    android:scheme="http"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ModifyHabitActivity.ModifyHabitActivity"
            android:label="New Habit"
            android:theme="@style/AppTheme">

        </activity>

        <activity
            android:name=".HabitSessions.SessionActivity"
            android:label="Habit Session"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme"/>

        <receiver
            android:name=".HabitSessions.SessionNotificationManager$SessionToggle"
            android:exported="false">
            <intent-filter>
                <action android:name="session_toggle_pressed"/>
            </intent-filter>
        </receiver>

        <activity
            android:name=".HabitSessions.ActiveSessionsActivity"
            android:label="Active Habits"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/AppTheme"/>

        <activity
            android:name=".ui.AboutActivity"
            android:label="About"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/AppTheme"/>

        <activity
            android:name=".Preferences.SettingsActivity"
            android:parentActivityName=".ui.MainActivity"/>

        <activity
            android:name=".HabitActivity.HabitActivity"
            android:label="@string/title_activity_habit"
            android:launchMode="singleTop"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MainActivity"/>
        </activity>

        <activity
            android:name=".OverallStatistics.OverallStatisticsActivity"
            android:label="@string/title_activity_overall_statistics"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.brandon.habitlogger.ui.MainActivity"/>
        </activity>

        <activity
            android:name=".DataExportHelpers.LocalExportActivity"
            android:exported="false"
            android:theme="@android:style/Theme.Translucent.NoTitleBar">

            <intent-filter
                android:icon="@drawable/ic_save_black_24dp"
                android:label="Save Locally">
                <action android:name="android.intent.action.SEND"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="text/csv"/>
            </intent-filter>
        </activity>

    </application>
</manifest>