<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/appBackground</item>
        <item name="android:actionModeBackground">@color/background5</item>
    </style>

    <style name="AppTheme.ContrastBackground" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorAccent">@color/contrastBackgroundAccent</item>
        <item name="android:windowBackground">@color/appBackground</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="@android:style/Widget.PopupMenu">
        <item name="colorControlNormal">@color/android:white</item>
        <item name="titleTextColor">@color/android:white</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColorHint">@color/searchHint</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat"/>

    <style name="DefaultTextAppearance">
        <item name="android:textColor">@color/textColor1</item>
    </style>

    <!-- Fab Styles -->
    <style name="fabMenuLabelStyle">
        <item name="android:background">@drawable/background_fab_label</item>
        <item name="android:textColor">@color/textColor1</item>
    </style>

    <style name="fabMenuButtonsStyle">
        <item name="fab_size">mini</item>
        <item name="fab_shadowColor">@color/shadowBlack</item>
        <item name="elevation">@dimen/fab_elevation</item>
        <item name="fab_colorNormal">?attr/colorAccent</item>
        <item name="fab_colorPressed">?attr/colorPrimaryDark</item>
    </style>

    <!-- CardView Styles -->
    <style name="statisticsCardView">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="contentPadding">8dp</item>
        <item name="cardBackgroundColor">@color/defaultCardViewBackground</item>
    </style>

    <style name="cardTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textColor1</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Date Picker Style -->
    <style name="MyDatePickerDialogTheme" parent="Theme.AppCompat.DayNight.Dialog">
        <!-- this is new -->
        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
        <item name="colorAccent">@color/contrastBackgroundAccent</item>
        <item name="android:colorAccent">@color/contrastBackgroundAccent</item>
        <item name="android:windowBackground">@color/appBackground</item>
        <item name="android:textColorPrimary">@color/textColor1</item>
        <item name="editTextColor">@color/textColor1</item>
        <item name="android:textColor">@color/textColor1</item>
    </style>

    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/dialogPickerHeaderColor</item>
        <item name="android:calendarTextColor">@color/textColor1</item>
        <item name="android:yearListItemTextAppearance">@style/DefaultTextAppearance</item>
        <item name="android:yearListSelectorColor">@color/contrastBackgroundAccent</item>
        <item name="android:datePickerMode">calendar</item>
    </style>

    <!-- Time Picker Style -->
    <style name="MyTimePickerDialogTheme" parent="Theme.AppCompat.DayNight.Dialog">
        <!-- this is new -->
        <item name="android:timePickerStyle">@style/MyTimePickerStyle</item>
        <item name="colorAccent">@color/contrastBackgroundAccent</item>
        <item name="android:colorAccent">@color/contrastBackgroundAccent</item>
        <item name="android:windowBackground">@color/appBackground</item>
        <item name="android:textColorPrimary">@color/textColor1</item>
        <item name="editTextColor">@color/textColor1</item>
        <item name="android:textColor">@color/textColor1</item>
    </style>

    <style name="MyTimePickerStyle" parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="android:headerBackground">@color/dialogPickerHeaderColor</item>
        <item name="android:colorAccent">@color/contrastBackgroundAccent</item>
    </style>


</resources>