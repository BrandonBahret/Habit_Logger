<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/habit_name_layout">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Habit Name"
            android:layout_weight="1"
            android:id="@+id/habit_name"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/habit_name_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/habit_description_layout">

        <EditText
            android:id="@+id/habit_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Habit Description" />
    </android.support.design.widget.TextInputLayout>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/habit_description_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/spinner" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/habit_category_layout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:id="@+id/habit_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Habit Category"/>

    </android.support.design.widget.TextInputLayout>

    <ImageButton
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_paint_brush"
        android:id="@+id/colorPicker"
        android:layout_below="@+id/spinner"
        android:layout_toRightOf="@+id/habit_category_layout"
        android:layout_toEndOf="@+id/habit_category_layout"/>

    <ImageButton
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_picture_layer_1"
        android:id="@+id/iconPicker"
        android:layout_below="@+id/spinner"
        android:layout_toRightOf="@+id/colorPicker"
        android:layout_toEndOf="@+id/colorPicker"
        android:layout_marginLeft="20dp"
        app:srcCompat="@drawable/ic_image_box" />

</RelativeLayout>