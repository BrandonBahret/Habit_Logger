<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.example.brandon.habitlogger.ui.MainActivity">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_main">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/habit_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/current_sessions_card"
            android:clipToPadding="false"
            android:fadingEdgeLength="8dp"

            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:requiresFadingEdge="vertical"
            android:scrollbars="none"/>

        <include
            android:id="@+id/current_sessions_card"
            layout="@layout/current_sessions_card"
            android:requiresFadingEdge="vertical"
            android:fadingEdgeLength="16dp"/>


    </android.support.design.widget.CoordinatorLayout>
</layout>
