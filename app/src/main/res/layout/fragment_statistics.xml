<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/statistics_fragment_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.brandon.habitlogger.HabitActivity.StatisticsFragment">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Space
                android:layout_width="match_parent"
                android:layout_height="100dp" />


            <fragment
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:name="com.example.brandon.habitlogger.HabitActivity.StatisticsFragments.TimeAverages"
                android:id="@+id/time_averages"
                tools:layout="@layout/fragment_time_averages" />


            <fragment
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:name="com.example.brandon.habitlogger.HabitActivity.StatisticsFragments.StreaksFragment"
                android:id="@+id/fragment"
                tools:layout="@layout/fragment_streaks" />

            <fragment
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:name="com.example.brandon.habitlogger.HabitActivity.StatisticsFragments.PieGraphCompletion"
                android:id="@+id/pie_graph_completion"
                tools:layout="@layout/fragment_pie_graph_completion" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="75dp" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</FrameLayout>
