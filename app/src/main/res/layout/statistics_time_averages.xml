<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/habitCard"
    app:contentPadding="8dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Time Averages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="10sp"
            android:textAlignment="center" />

        <TextView
            android:text="00 Hours Per Month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hours_per_month_text"
            android:textAlignment="center" />

        <TextView
            android:text="00 Hours Per Week"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hours_per_week_text"
            android:textAlignment="center" />

        <TextView
            android:text="00 Hours Per Day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hours_per_day_text"
            android:textAlignment="center" />

        <TextView
            android:text="Frequency (Monthly)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/habit_frequency_text"
            android:textAlignment="center" />
    </LinearLayout>

</android.support.v7.widget.CardView>