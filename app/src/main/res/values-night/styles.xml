<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="@android:style/Widget.PopupMenu"/>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat" />

    <style name="card_title">

        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/habitCardButtonColor</item>

    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MenuButtonsStyle">
        <item name="fab_size">mini</item>
        <item name="fab_shadowColor">@color/shadow_black</item>
        <item name="elevation">4dp</item>
        <item name="fab_colorNormal">?attr/colorAccent</item>
        <item name="fab_colorPressed">?attr/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.Card">
        <item name="android:layout_margin">4dp</item>
        <item name="contentPadding">8dp</item>
        <item name="cardBackgroundColor">@color/habitCard</item>
    </style>

</resources>
