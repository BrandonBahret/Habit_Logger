<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.brandon.habitlogger.AboutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_above="@+id/textView4">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginRight="25dp"
            android:layout_marginEnd="25dp">

            <ImageView
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/imageView"
                android:layout_width="125dp"
                android:layout_height="100dp"
                />

            <TextView
                android:text="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"

                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="18sp"
                android:textAlignment="center" />

            <TextView
                android:text="'App Version'"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/versionNumber"

                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textAlignment="center" />

        </LinearLayout>

        <TextView
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus et tempor mi, quis congue turpis. Donec pretium ligula ipsum turpis duis."
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_width="270dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    </LinearLayout>

    <TextView
        android:text="Links"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:background="@drawable/underline_background"
        android:textAlignment="center"
        android:layout_above="@+id/link_layout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:id="@+id/link_layout"

        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/link_buttion_size"
            android:layout_weight="5" />

        <ImageButton
            android:layout_width="@dimen/link_buttion_size"
            android:layout_height="@dimen/link_buttion_size"
            android:src="@drawable/ic_github"
            android:scaleType="fitCenter"
            android:background="@color/transparent"
            android:layout_weight=".5"
            android:onClick="linkButtonClicked"
            android:tag="Github"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/link_buttion_size"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="@dimen/link_buttion_size"
            android:layout_height="@dimen/link_buttion_size"
            android:src="@drawable/ic_linkedin"
            android:scaleType="fitCenter"
            android:background="@color/transparent"
            android:layout_weight=".5"
            android:onClick="linkButtonClicked"
            android:tag="LinkedIn"
            android:tint="#0077B5" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/link_buttion_size"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="@dimen/link_buttion_size"
            android:layout_height="@dimen/link_buttion_size"
            android:src="@drawable/ic_freelancer"
            android:scaleType="centerCrop"
            android:background="@color/transparent"
            android:layout_weight=".5"
            android:onClick="linkButtonClicked"
            android:tag="Freelancer"
            android:tint="#6dc0e6" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/link_buttion_size"
            android:layout_weight="5"/>
    </LinearLayout>

</RelativeLayout>
