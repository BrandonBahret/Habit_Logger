<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Main Screen Settings">

        <ListPreference
            android:defaultValue="0"
            android:dialogTitle="Display categories as..."
            android:entries="@array/category_options"
            android:entryValues="@array/category_options_values"
            android:key="@string/pref_show_categories"
            android:summary="Set how the app displays habit categories."
            android:title="Categories"/>

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/pref_hide_fab_on_scroll"
            android:summary="Scroll the list to move the floating action button out of the way."
            android:title="Hide new habit button on scroll"/>

        <SwitchPreference
            android:defaultValue="true"
            android:key="@string/pref_display_current_sessions_card"
            android:summary="Display the 'Current Sessions' card."
            android:title="Show Current Sessions"/>

        <CheckBoxPreference
            android:defaultValue="true"
            android:dependency="@string/pref_display_current_sessions_card"
            android:key="@string/pref_display_current_sessions_card_at_zero"
            android:summary="Display the 'Current Sessions' card even when zero sessions are active."
            android:title="Show at zero active sessions"/>

        <CheckBoxPreference
            android:defaultValue="false"
            android:dependency="@string/pref_display_current_sessions_card"
            android:key="@string/pref_hide_current_sessions_card_on_scroll"
            android:summary="Scroll the list to move the 'current sessions' card out of the way."
            android:title="Hide card on scroll"/>
    </PreferenceCategory>

    <PreferenceCategory android:title="Session Activity">

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/pref_ask_finish"
            android:summary="Ask for confirmation before completing sessions."
            android:title="Confirm finish"/>

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/pref_ask_cancel"
            android:summary="Ask for confirmation before canceling sessions."
            android:title="Confirm cancel"/>

    </PreferenceCategory>

    <PreferenceCategory android:title="Notifications">
        <SwitchPreference
            android:defaultValue="true"
            android:key="@string/pref_do_show_notifications"
            android:summary="Show notifications for active sessions."
            android:title="Show Notifications"/>
        <CheckBoxPreference
            android:defaultValue="true"
            android:dependency="@string/pref_do_show_notifications"
            android:key="@string/pref_do_show_notifications_auto"
            android:summary="Have the app automatically display notifications."
            android:title="Automatically Show Notifications"/>
    </PreferenceCategory>

    <PreferenceCategory android:title="Appearance">

        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/pref_is_night_mode"
            android:title="Night Mode"/>

        <ListPreference
            android:defaultValue="0"
            android:dialogTitle="Select a format"
            android:entries="@array/date_format_options"
            android:entryValues="@array/date_format_options_values"
            android:key="@string/pref_date_format"
            android:summary="Set the format used to display dates."
            android:title="Date Format"/>
    </PreferenceCategory>

</PreferenceScreen>